{
  "root": true,
  "extends": ["@byndyusoft/eslint-config/header-apache-2.0", "@byndyusoft/eslint-config/backend"],
  "parserOptions": {
    "ecmaVersion": 2020, // Node.js v14 LTS
    "project": ["./packages/*/tsconfig.json"]
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "settings": {
        "import/resolver": {
          "typescript": {
            "project": "./packages/*/tsconfig.json"
          }
        }
      }
    }
  ]
}
