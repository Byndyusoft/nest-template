{
  "name": "ᐸAppᐳ",
  "version": "0.0.0-development",
  "private": true,
  "description": "ᐸApp descriptionᐳ",
  "homepage": "https://github.com/Byndyusoft/ᐸRepository nameᐳ#readme",
  "bugs": {
    "url": "https://github.com/Byndyusoft/ᐸRepository nameᐳ/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Byndyusoft/ᐸRepository nameᐳ.git"
  },
  "license": "Apache-2.0",
  "author": "Byndyusoft",
  "scripts": {
    "prebuild": "shx rm -rf ./dist",
    "build": "yarn run prebuild && yarn run build:src",
    "build:src": "nest build",
    "start": "nest start --exec \"yarn node -r dotenv/config\"",
    "start:prod": "yarn node ./dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/infrastructure/**/*.ts",
      "!./src/main.ts",
      "!**/*Command.ts",
      "!**/*Dto.ts",
      "!**/*Entity.ts",
      "!**/*Mapper.ts",
      "!**/*Module.ts",
      "!**/*Query.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "@byndyusoft/sonar-coverage-reporter"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "reporters": [
      "default",
      [
        "@casualbot/jest-sonar-reporter",
        {
          "relativePaths": true,
          "outputDirectory": "coverage",
          "outputName": "test-report.xml"
        }
      ]
    ],
    "resetMocks": true,
    "roots": [
      "<rootDir>/test"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@byndyusoft/class-validator-extended": "1.2.0",
    "@byndyusoft/nest-opentracing": "2.6.0",
    "@byndyusoft/nest-pino": "3.4.0-1",
    "@byndyusoft/nest-swagger": "7.1.9-1",
    "@byndyusoft/pino-logger-factory": "3.3.0",
    "@digikare/nestjs-prom": "1.0.0",
    "@nestjs/axios": "3.1.3",
    "@nestjs/common": "9.4.3",
    "@nestjs/core": "9.4.3",
    "@nestjs/platform-express": "9.4.3",
    "@nestjs/terminus": "9.2.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "helmet": "8.0.0",
    "jaeger-client": "3.19.0",
    "lodash": "4.17.21",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "source-map-support": "0.5.21",
    "tslib": "2.8.1",
    "ᐸDtosᐳ": "workspace:*"
  },
  "devDependencies": {
    "@byndyusoft/sonar-coverage-reporter": "1.0.0",
    "@byndyusoft/tsconfig": "2.2.0",
    "@casualbot/jest-sonar-reporter": "2.4.0",
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@types/express": "4.17.21",
    "@types/jaeger-client": "3.18.7",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.15",
    "@types/node": "22.12.0",
    "@types/source-map-support": "0.5.10",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "jest": "29.7.0",
    "jest-extended": "3.2.4",
    "jest-mock-extended": "3.0.7",
    "pino-pretty": "13.0.0",
    "shx": "0.3.4",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4",
    "ᐸDtos testingᐳ": "workspace:*"
  },
  "engines": {
    "node": ">=22"
  }
}
