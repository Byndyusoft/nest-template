{
  "name": "ᐸAppᐳ",
  "version": "0.0.0-development",
  "private": true,
  "description": "ᐸApp descriptionᐳ",
  "homepage": "https://github.com/Byndyusoft/ᐸRepository nameᐳ#readme",
  "bugs": {
    "url": "https://github.com/Byndyusoft/ᐸRepository nameᐳ/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Byndyusoft/ᐸRepository nameᐳ.git"
  },
  "license": "Apache-2.0",
  "author": "Byndyusoft",
  "scripts": {
    "prebuild": "shx rm -rf ./dist",
    "build": "yarn run prebuild && yarn run build:src",
    "build:src": "nest build",
    "start": "nest start",
    "start:prod": "yarn node ./dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.ts",
      "!./src/infrastructure/**/*.ts",
      "!./src/main.ts",
      "!**/*Command.ts",
      "!**/*Dto.ts",
      "!**/*Entity.ts",
      "!**/*Mapper.ts",
      "!**/*Module.ts",
      "!**/*Query.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "@byndyusoft/sonar-coverage-reporter"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "resetMocks": true,
    "roots": [
      "<rootDir>/test"
    ],
    "setupFiles": [
      "reflect-metadata"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "testResultsProcessor": "jest-sonar-reporter",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@byndyusoft/class-validator-extended": "1.0.1",
    "@byndyusoft/nest-opentracing": "2.3.2",
    "@byndyusoft/nest-swagger": "5.2.1-1",
    "@byndyusoft/pino-logger-factory": "3.0.0",
    "@digikare/nestjs-prom": "1.0.0",
    "@nestjs/axios": "0.1.0",
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "8.4.7",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/terminus": "8.1.1",
    "@nestjs/typeorm": "8.1.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "dotenv": "16.0.3",
    "helmet": "6.0.0",
    "jaeger-client": "3.19.0",
    "lodash": "4.17.21",
    "nestjs-pino": "3.1.1",
    "pg": "8.8.0",
    "pino": "8.6.1",
    "pino-http": "8.2.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.7",
    "source-map-support": "0.5.21",
    "swagger-ui-express": "4.5.0",
    "tslib": "2.4.0",
    "typeorm": "0.3.10",
    "ᐸDtosᐳ": "workspace:*",
    "ᐸEntitiesᐳ": "workspace:*"
  },
  "devDependencies": {
    "@byndyusoft/sonar-coverage-reporter": "1.0.0",
    "@byndyusoft/tsconfig": "1.2.0",
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@types/express": "4.17.14",
    "@types/jaeger-client": "3.18.3",
    "@types/jest": "29.1.1",
    "@types/lodash": "4.14.186",
    "@types/node": "16.11.64",
    "@types/pg": "8.6.5",
    "@types/source-map-support": "0.5.6",
    "express": "4.18.1",
    "jest": "29.1.2",
    "jest-extended": "3.1.0",
    "jest-mock-extended": "3.0.1",
    "jest-sonar-reporter": "2.0.0",
    "pino-pretty": "9.1.0",
    "shx": "0.3.4",
    "ts-jest": "29.0.3",
    "typescript": "4.7.4",
    "ᐸDtos testingᐳ": "workspace:*"
  },
  "engines": {
    "node": ">=16"
  },
  "jestSonar": {
    "reportPath": "./coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  }
}
